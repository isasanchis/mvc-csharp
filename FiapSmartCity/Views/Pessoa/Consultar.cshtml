@model FiapSmartCity.Models.Pessoa

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pessoas - Consultar</title>
</head>
<body>
    <h1>Pessoas - Consultar</h1>
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label><b>Nome:</b></label>
            <div class="col-md-10">
                <span>@Model.Nome</span>
            </div>
        </div>

        <div class="form-group">
            <label><b>Endereço:</b></label>
            <div class="col-md-10">
                <span>@Model.Endereco</span>
            </div>
        </div>
        <hr />
    </div>
    <div>
        <a asp-controller="Pessoa" asp-action="Index">Voltar</a>
    </div>

</body>
</html>