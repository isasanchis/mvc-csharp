@model FiapSmartCity.Models.Pessoa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pessoa - Cadastrar</title>
</head>
<body>
    <h1>Pessoa - Cadastrar</h1>

    <!-- formulário HTML com Tag Helpers-->
    <form asp-action="Cadastrar" asp-controller="Pessoa" method="post">
        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control col-md-4" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control col-md-4" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="reset" value="Limpar" class="btn btn-default" />
                    <!-- HTML Simple para envio dos dados do formulário -->
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                </div>
            </div>
            <hr />
        </div>
    </form>
    <div>
        <a asp-controller="Pessoa" asp-action="Index">Voltar</a>
    </div>
</body>
</html>